{
  "manifest_version": 3,
  "name": "WebDev Master",
  "description": "Your Little Helper in Web Development and Learning",
  "version": "1.0",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "service_worker": "assets/service-worker.js",
    "type": "module"
  },
  "options_ui": {
    "page": "pages/options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "js": ["assets/content-script.js"],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png"
    },
    "default_title": "有钱有闲早日退休",
    "default_popup": "pages/popup.html"
  },
  "side_panel": {
    "default_path": "pages/side-panel.html"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "notifications",
    "contextMenus",
    "sidePanel",
    "scripting",
    "activeTab",
    "identity",
    "storage",
    "cookies",
    "tabs"
  ],
  "web_accessible_resources": [
    {
      "resources": [ "assets/content-inject.js" ],
      "matches": [ "<all_urls>" ]
    }
  ]
}